# Production Environment Variables Template
# Copy to .env.production and fill in actual values
# NEVER commit .env.production to git!

# ===========================================
# Core Application
# ===========================================
ENVIRONMENT=production
SECRET_KEY=CHANGEME_GENERATE_WITH_openssl_rand_base64_32
DEBUG=False

# ===========================================
# Database (PostgreSQL + TimescaleDB)
# ===========================================
POSTGRES_DB=football_predictor
POSTGRES_USER=predictor
POSTGRES_PASSWORD=CHANGEME_STRONG_PASSWORD
POSTGRES_PORT=5432
DATABASE_URL=postgresql://predictor:CHANGEME_STRONG_PASSWORD@postgres:5432/football_predictor
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=40

# ===========================================
# Redis Cache
# ===========================================
REDIS_PASSWORD=CHANGEME_REDIS_PASSWORD
REDIS_PORT=6379
REDIS_URL=redis://:CHANGEME_REDIS_PASSWORD@redis:6379/0
REDIS_CACHE_TTL=3600

# ===========================================
# API Configuration
# ===========================================
API_PORT=8000
API_RATE_LIMIT=100/minute
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
MAX_WORKERS=4
WORKER_TIMEOUT=30

# ===========================================
# Model Configuration
# ===========================================
MODEL_VERSION=1.0.0
BAYESIAN_SAMPLES=2000
BAYESIAN_BURNIN=1000
PREDICTION_CACHE_TTL=1800

# ===========================================
# Data Collection
# ===========================================
FBREF_RATE_LIMIT=3.0
UNDERSTAT_RATE_LIMIT=5.0
DATA_COLLECTION_SCHEDULE=0 2 * * *

# ===========================================
# Monitoring & Logging
# ===========================================
LOG_LEVEL=INFO
PROMETHEUS_PORT=9090
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Grafana
GRAFANA_PORT=3001
GRAFANA_USER=admin
GRAFANA_PASSWORD=CHANGEME_GRAFANA_PASSWORD
GRAFANA_URL=https://grafana.yourdomain.com

# ===========================================
# Celery (Background Tasks)
# ===========================================
FLOWER_PORT=5555
FLOWER_USER=admin
FLOWER_PASSWORD=CHANGEME_FLOWER_PASSWORD

# ===========================================
# pgAdmin
# ===========================================
PGADMIN_PORT=5050
PGADMIN_EMAIL=admin@yourdomain.com
PGADMIN_PASSWORD=CHANGEME_PGADMIN_PASSWORD

# ===========================================
# Security
# ===========================================
JWT_EXPIRATION_HOURS=24

# ===========================================
# AWS (if deploying to AWS)
# ===========================================
# AWS_ACCESS_KEY_ID=your_access_key
# AWS_SECRET_ACCESS_KEY=your_secret_key
# AWS_REGION=us-east-1
# S3_BUCKET=football-predictor-models

