# EPL Match Predictor - Environment Variables Template
# Copy this file to .env and fill in your values

# ==================== ENVIRONMENT ====================
ENVIRONMENT=development  # development | production | testing

# ==================== DATABASE ====================
DATABASE_URL=sqlite:///backend/data/epl_data.db
# For PostgreSQL:
# DATABASE_URL=postgresql://user:password@localhost:5432/epl_predictor

DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10
DB_POOL_RECYCLE=3600
DB_ECHO=false

# ==================== REDIS ====================
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
REDIS_MAX_CONNECTIONS=50
REDIS_SOCKET_TIMEOUT=5
REDIS_CONNECT_TIMEOUT=5

# ==================== CACHE ====================
CACHE_ENABLED=true
CACHE_DEFAULT_TTL=3600

# Entity-specific TTL (seconds)
CACHE_PLAYER_RATING_TTL=3600
CACHE_TEAM_LINEUP_TTL=43200
CACHE_MATCH_PREDICTION_TTL=3600
CACHE_FPL_DATA_TTL=1800
CACHE_ODDS_DATA_TTL=600

# ==================== AI PROVIDER ====================
AI_PROVIDER=gemini  # gemini | claude | qwen

# Gemini (Google AI)
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.0-flash-exp
GEMINI_THINKING_BUDGET=8000

# Claude (Anthropic)
CLAUDE_API_KEY=your_claude_api_key_here
CLAUDE_MODEL=claude-sonnet-4-20250514

# Qwen (Local Ollama)
QWEN_BASE_URL=http://localhost:11434
QWEN_MODEL=qwen2.5:14b

# AI Rate Limiting
AI_MAX_REQUESTS_PER_MINUTE=60
AI_TIMEOUT=30

# ==================== API SERVER ====================
API_HOST=0.0.0.0
API_PORT=5001
API_DEBUG=false
API_WORKERS=4

# CORS Origins (comma-separated or JSON array)
API_CORS_ORIGINS=["http://localhost:3000"]

# Rate Limiting
API_RATE_LIMIT_ENABLED=true
API_RATE_LIMIT_PER_MINUTE=60

# ==================== EXTERNAL APIs ====================
# FPL API (no key required)
FPL_BASE_URL=https://fantasy.premierleague.com/api
FPL_TIMEOUT=10

# The Odds API
ODDS_API_KEY=your_odds_api_key_here
ODDS_API_URL=https://api.the-odds-api.com/v4
ODDS_TIMEOUT=10

# API Football
API_FOOTBALL_KEY=your_api_football_key_here
API_FOOTBALL_URL=https://v3.football.api-sports.io

# ==================== FEATURE FLAGS ====================
ENABLE_V3_SIMULATION=true
ENABLE_ENRICHED_SIMULATION=true
ENABLE_PAYMENT=false
ENABLE_AI_RATING=true
ENABLE_VALUE_BETTING=true
ENABLE_INJURY_TRACKING=true

# ==================== LOGGING ====================
LOG_LEVEL=INFO  # DEBUG | INFO | WARNING | ERROR
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE_PATH=logs/app.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5
LOG_USE_JSON=false
LOG_INCLUDE_TRACE=true

# ==================== MONITORING ====================
SENTRY_DSN=
ENABLE_METRICS=true

# ==================== PAYMENT (Stripe) ====================
STRIPE_API_KEY=your_stripe_api_key_here
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret_here
